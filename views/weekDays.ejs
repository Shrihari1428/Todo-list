<%- include("header") -%>
<div class="box" id="heading">
  <h1><%=listTitle%></h1>
</div>
<div class="box">
  <% for(var i = 0;i<tasks.length;i++){ %>
  <form action="/delete" method="post">
    <div class="item">
      <input type="checkbox" name="checkedItem" value=<%=tasks[i]._id%> onChange="this.form.submit()">
      <p><%=tasks[i].name%>
      <p>
    </div>
    <input type="hidden" name="listName" value=<%=listTitle%>></input>
  </form>
  <% } %>
  <form class="item" action="/" method="post">
    <input type="text" name="task" placeholder="Enter the task" autocomplete="off" />
    <button type="submit" name="submit" value=<%=listTitle%>>+</button>
  </form>
</div>

<!-- refer css selectors -->
<%- include("footer") -%>
